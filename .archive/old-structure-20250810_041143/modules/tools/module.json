{
  "name": "tools",
  "version": "1.0.0",
  "type": "tool",
  "description": "Essential Clauder tools collection",
  "author": "Clauder Team",
  "license": "MIT",
  "provides": [
    "emoji-removal",
    "convention-validation",
    "state-tracking",
    "compliance-checking"
  ],
  "requires": [],
  "dependencies": {},
  "config": {
    "schema": {
      "validation": {
        "strict_mode": {
          "type": "boolean",
          "default": true,
          "description": "Strict validation mode"
        },
        "target_compliance": {
          "type": "number",
          "default": 95,
          "description": "Target compliance percentage"
        }
      },
      "emoji_removal": {
        "backup": {
          "type": "boolean",
          "default": true,
          "description": "Create backups before removing emojis"
        },
        "dry_run": {
          "type": "boolean",
          "default": false,
          "description": "Preview changes without applying"
        }
      }
    }
  },
  "hooks": {
    "install": "hooks/install.sh",
    "pre-init": "hooks/pre-init.sh",
    "post-init": "hooks/post-init.sh"
  },
  "exports": {
    "commands": {
      "remove-emojis": "bin/emoji-remover",
      "validate": "bin/validator",
      "track-state": "bin/state-tracker"
    },
    "tools": [
      "emoji-remover",
      "convention-validator",
      "state-tracker"
    ]
  },
  "files": [
    "module.json",
    "README.md",
    "src/",
    "bin/",
    "hooks/"
  ],
  "compatibility": {
    "clauder": "^2.0.0",
    "os": ["darwin", "linux"],
    "shell": ["bash", "zsh"]
  }
}